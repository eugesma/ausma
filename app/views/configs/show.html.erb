<div class="card">
  <div class="card-header">
    <h5><%= fa_icon "cog" %> Configuración</h5>
  </div>
  <div class="card-body fixed-panel">
    <div class="row">
      <div class="col-12">
        <h4 class="border-bottom pb-2">Asignaturas</h4>
      </div>
      <div class="col-4">
        <p>
          <strong>% Preparación:</strong>
          <%= number_to_percent(@config.assignature_preparation_percentage) %>
        </p>
      </div>
      <div class="col-4">
        <p>
          <strong>% Consulta:</strong>
          <%= number_to_percent(@config.assignature_consultation_percentage) %>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
        <h4 class="border-bottom pb-2">Roles de proyectos</h4>
        <div class="d-flex justify-content-center">
          <div class="card ml-3">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Rol</th>
                  <th>Múltiplo</th>
                </tr>
              </thead>

              <tbody>
                <% ProjectRole.all.each do |project_role| %>
                  <tr>
                    <td><%= project_role.name %></td>
                    <td><%= project_role.multiple %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="col-6">
        <h4 class="border-bottom pb-2">Días hábiles por año</h4>
        <div class="d-flex justify-content-center">
          <div class="card ml-3">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Año</th>
                  <th>Días</th>
                </tr>
              </thead>

              <tbody>
                <% @config.working_day_per_years.each do |wdpy| %>
                  <tr>
                    <td><%= wdpy.year %></td>
                    <td><%= wdpy.number_of_days %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer text-right">
    <% if policy(@config).edit? %>
      <%= link_to edit_config_path(@config), class: "btn btn-warning" do %>
        <%= fa_icon "edit" %>
        Editar
      <% end %>
    <% end %>
  </div>
</div>