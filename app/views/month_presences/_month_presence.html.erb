<tr id="month_presence_<%= month_presence.id %>">
  <td><%= month_presence.month_date %></td>
  <td class="float-right">
    <% if policy(month_presence).show? %>
      <%= link_to month_presence_path(month_presence), class: 'btn btn-outline-secondary btn-sm', 
        title: 'Ver detalles', data: { toggle: 'tooltip', placement: 'top' } do %>
        <%= fa_icon "eye" %>
      <% end %>
    <% end %>
    <% if policy(month_presence).edit? %>
      <%= link_to edit_month_presence_path(month_presence), class: 'btn btn-outline-warning btn-sm', 
        title: 'Editar', data: { toggle: 'tooltip', placement: 'top' } do %>
        <%= fa_icon "edit" %>
      <% end %>
    <% end %>
  </td>
</tr>
