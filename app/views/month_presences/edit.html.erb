<div class="col-lg-8 col-md-12 mx-auto">
  <div class="card">
    <div class="card-header bg-warning">
    <h4><%= fa_icon "pen" %> Editando formulario de asistencia</h4>
    </div>
    <div class="card-body">
      <%= render 'form', month_presence: @month_presence %>
    </div>
    <div class="card-footer">
      <button type='submit' name='commit' class='btn btn-success float-right' form='edit_month_presence_<%= @month_presence.id %>'>
        <%= fa_icon "save" %> Guardar cambios
      </button>
      <%= link_to month_presences_path, class: "btn btn-light float-right mr-2" do %>
        Volver
      <% end %>
    </div>
  </div>
</div>
