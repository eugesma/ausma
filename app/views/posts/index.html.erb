<div class="card">
  <div class="card-header">
    <div class="row d-flex align-items-center">
      <div class="col-3 h5">
        <%= fa_icon "file-alt" %> Publicaciones
        <% if policy(Post).new? %>
          <%= link_to new_post_path, class: "btn btn-primary" do %>
            <%= fa_icon "plus" %> 
            Nueva
          <% end %>
        <% end %>
      </div>
      <div class="col-9">
        <%= form_for_filterrific @filterrific do |f| %>
          <div class="row d-flex justify-content-end">
            <div class="col d-flex justify-content-end align-items-center">
              <%= render_filterrific_spinner %>
              <%= link_to posts_path(reset: true), class: 'btn btn-secondary ml-2',
                title: 'Reiniciar', data: { toggle: 'tooltip', placement: 'top' },
                'data-disable-with' => "<i class='fa fa-redo fa-spin'></i>".html_safe do %>
                <%= fa_icon 'redo' %>
              <% end %>
            </div>
            <div class="col">
              <%= f.text_field(
                :search_by_teacher,
                class: 'filterrific-periodically-observed form-control py-2 border-right-0 border',
                placeholder: 'Docente',
                autocomplete: 'off',
                ) 
              %>
            </div>
            <div class="col">
              <%= f.text_field(
                :search_by_name,
                class: 'filterrific-periodically-observed form-control py-2 border-right-0 border',
                placeholder: 'FormaciÃ³n',
                autocomplete: 'off',
                ) 
              %> 
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-body fixed-panel-index">
    <% if @posts.present? %>
      <%= render(
        partial: 'posts/list',
        locals: { posts: @posts }
      ) %>
    <% else %>
      <%= render(
        partial: 'shared/not_found',
        locals: { object_name: 'publicaciones' }
      ) %>
    <% end %>
  </div>
</div>

