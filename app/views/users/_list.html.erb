<div id="filterrific_results">
  <% if @users.present? %>
    <div class="card fixed-panel-list">
      <table class="table table-hover table-striped table-sm">
        <thead>
          <tr>
            <th></th>
            <th>Apellido y nombre</th>
            <th>Matrícula</th>
            <th>Email</th>
            <th>Última conexión</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="users">
          <%= render @users %>
        </tbody>
      </table>
    </div>
    <div id="page_links">
      <%= will_paginate @users, list_classes: %w(pagination justify-content-center), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  <% else %>
    <%= render(
      partial: 'shared/not_found_filter',
      locals: { object_name: 'usuarios' }
    ) %>
  <% end %>
</div>
