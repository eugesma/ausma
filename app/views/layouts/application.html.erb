<!DOCTYPE html>
<html>
  <head>
    <title>Ausma</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta name="description" content="">
      <meta name="author" content="">

      <title>AUSMA - Universidad Nacional del Comahue 2019</title>

      <!-- Bootstrap core CSS -->
      <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

      <!-- Custom fonts for this template -->
      <link href="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
  </head>

  <body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
      <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="<%= root_path %>"> <%= image_tag("uncoma-1.png", size: "55x55", alt: "Logo Sifaho") %> AUSMA</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="#about">Docencia</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="#projects">Facultad</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="#signup">Alumnos</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="">Instalaciones</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="">Galería</a>
            </li>
            <% if current_user.present? %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <%= current_user.fullname %>
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <%= link_to "Editar perfil", edit_profile_path(current_user.profile), class: "dropdown-item" %>
                  <div class="dropdown-divider"></div>
                  <%= link_to "Cerrar sesión", destroy_user_session_path, class: "dropdown-item", :method => :delete %>
                </div>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Iniciar sesión", new_user_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <%= yield %>
    <!-- Footer -->
    <footer class="footer bg-black small text-center text-white-50">
      <div class="container">
        Copyright &copy; AUSMA - Universidad Nacional del Comahue 2019
      </div>
    </footer>

    <!-- Plugin JavaScript -->
    <script src="http://blackrockdigital.github.io/startbootstrap-grayscale/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="http://blackrockdigital.github.io/startbootstrap-grayscale/js/grayscale.min.js"></script>
  </body>
</html>


