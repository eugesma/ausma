<style>
  body {
    background-image: url("<%= asset_path('bg-signup.jpg') %>");
  }
</style>
<br><br><br><br><br>
<div class="col-md-3 mx-auto">
  <div class="card rounded-0">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
      <div class="card-header">
        <%= image_tag("uncoma-1.png", size: "100x100", alt: "Logo Sifaho", class:"mx-auto d-block") %>
        <h3>Iniciar sesi칩n</h3>
      </div>
      <%= devise_error_messages! %>
      <div class="card-body">
        <div class="form-group">
          <%- if devise_mapping.registerable? %>
            <%= link_to 'Registrarse', new_registration_path(resource_name), class: 'right'  %>
          <% end -%>
          <%= f.label 'Usuario' %>
          <%= f.text_field :username, :autofocus => true, class: 'form-control' %>
        </div>
        <div class="form-group">
          <%- if devise_mapping.recoverable? %>
            <%= link_to "Olvidaste tu contrase침a?", new_password_path(resource_name), class: 'right' %>
          <% end -%>
          <%= f.label 'Contrase침a' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <% if devise_mapping.rememberable? -%>
          <div class="checkbox" style="width:150px">
            <label>
              <%= f.check_box :remember_me %> Recordarme
            </label>
          </div>
        <% end -%>
        <%= f.submit 'Iniciar sesi칩n', class: 'btn btn-success btn-md btn-block' %>
      </div>
    <% end %>
  </div>
</div>
<br>
<%= render "devise/shared/links" %>