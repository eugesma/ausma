<h4 class="row mb-0 pb-0">
  <div class="col-8 mb-0 pb-0"><%= fa_icon "file-alt" %> Publicaciones</div>
  <div class="col-4 text-right mb-0 pb-0">
    <%= link_to 'Registrar publicación', new_post_path(), class: "btn btn-ight text-primary" %>
  </div>
</h4>
<hr class="mt-0">
<div class="col-10 mx-auto">
  <% if posts.present? %>
    <div class="row border-bottom">
      <div class="col">
        Nombre
      </div>
      <div class="col">
        Tipo
      </div>
      <div class="col">
        Estado
      </div>
      <div class="col">
        Créditos
      </div>
    </div>
    <% posts.each do |post| %>
      <div class="row">
        <div class="col">
          <%= post.name %>
        </div>
        <div class="col">
          <%= post.post_type_name %>
        </div>
        <div class="col">
          <span class="badge badge-<%= post_status_label(post.post) %>"><%= post.status.humanize %>
        </div>
        <div class="col">
          <%= format_number(post.credit) %>
        </div>
      </div>
    <% end %>
    <div class="row table-info">
      <div class="col">
        Total
      </div>
      <div class="col">
      </div>
      <div class="col">
      </div>
      <div class="col">
        <%= number_to_currency(@teacher.total_post_credits, unit: "créditos", format: "%n %u") %>
      </div>
    </div>
  <% else %>
    No tienes publicaciones
  <% end %>
</div>