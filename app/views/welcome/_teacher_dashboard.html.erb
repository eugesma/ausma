<div class="mx-auto col-10">
  <div class="card">
    <div class="card-header">
      <h3><%= fa_icon "file-alt"%> Mi currículum anual</h3>
    </div>
    <div class="card-body fixed-panel-cv">
      <div class="row">
        <div class="col-12">
          <div class="media mb-3">
            <%= image_tag('profile-placeholder.png', size: "100x100", class: "align-self-center img-thumbnail mr-3") %>
            <div class="media-body">
              <h5 class="mt-0"><%= current_user.fullname %></h5>
              <p><% if current_user.email.present? %><%=fa_icon "envelope" %> <%= current_user.email %><% end %></p>
              <p class="mb-0">N° Empleado <%= current_user.employee_num %></p>
            </div>
          </div>
          <!-- Asignatures -->
          <%= render "assignatures", assignatures: @assignatures %>

          <!-- Meetings -->
          <%= render "meetings", meetings: @meetings %>
          <br>
          <!-- Extension activities -->
          <%= render "extension_activities", extension_activities: @extension_activities %>
          <br>
          <!-- Formations -->
          <%= render "formations", formations: @formations %>
          <br>
          <!-- Posts -->
          <%= render "posts", posts: @posts %>
          <br>
          <!-- Projects -->
          <%= render "projects", projects: @projects %>
        </div>
      </div>
    </div>
  </div>
</div>