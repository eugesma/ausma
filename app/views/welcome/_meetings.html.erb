<h4 class="row mt-3 mb-0 pb-0">
  <div class="col-8 mb-0 pb-0"><%= fa_icon "users" %> Reuniones</div>
</h4>
<hr class="mt-0">
<div class="col-10 mx-auto">
  <% if @meetings.present? %>
    <div class="row border-bottom">
      <div class="col">
        Nombre
      </div>
      <div class="col">
        Crédito
      </div>
    </div>
    <% @meetings.each do |meeting| %>
      <div class="row">
        <div class="col">
          <%= meeting.name %>
        </div>
        <div class="col">
          <%= meeting.total_credit %>
        </div>
      </div>
    <% end %>
    <div class="row table-info">
      <div class="col">
        Total
      </div>
      <div class="col">
        <%= number_to_currency(@meetings.sum(:total_credit), unit: "créditos", format: "%n %u") %>
      </div>
    </div>
  <% else %>
    No tienes reuniones
  <% end %>
</div>