<%=  simple_form_for(extension_activity) do |f| %>
  <%= f.error_notification %>
  <div class='row'>
    <div class='col-12'>
      <%= f.input :name, label: 'Nombre' %>
    </div>
    <div class="col-12">
      <%= f.input :observation, label: 'Observaciones' %>
    </div>
    <div class="col-12">
      <%= f.input :extension_activity_type_id, label: 'Tipo de actividad', 
        :collection => @extension_activity_types,
        required: true,
        input_html: { class: "selectpicker", "title"=>"Seleccionar un tipo de actividad" } %>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <%= f.input :implementation, label: "Implementación" %>
    </div>
    <div class="col-3"> 
      <%= f.input :preparation, label: "Preparación" %>
    </div>
    <div class="col-3">
      <%= f.input :evaluation, label: "Evaluación/consultas" %>
    </div>
    <div class="col-3">
      <%= f.input :credit, label: "Crédito" %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= f.label :teachers, "Docentes" %>
      <%= f.collection_select :teacher_ids, @teachers, :id, :fullname, {label: "Docentes" }, 
        { class: "selectpicker", multiple: true, size: 6, :data => {width: "100%"},
          "data-none-results-text" => "No se encontró docente", "data-live-search"=>true,
          "title"=>"Seleccionar docentes",
        }
      %>
    </div>
  </div>
<% end %>
