<ul class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to 'Inicio', root_path %></li>
  <li class="breadcrumb-item active">Reuniones</li>
</ul>
<div class="card">
  <div class="card-header">
    <h3 class="title">
      <%= fa_icon "leaf" %> Reuniones
      <%= link_to new_dedication_path, class: "btn btn-outline-primary" do %>
        <%= fa_icon "plus" %> 
        Nueva
      <% end %>
    </h3>
  </div>
  <div class="card-body">
    <table class="table table-hover table-sm">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Docentes invitados</th>
          <th>Presentes</th>
          <th>Ausentes</th>
          <th>Ausentes s/a</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @dedications.each do |dedication| %>
          <tr>
            <td><%= dedication.name %></td>
            <td><span class="badge badge-secondary"><%= dedication.teachers.count %></span></td>
            <td><span class="badge badge-success"><%= dedication.count_assist %></span></td>
            <td><span class="badge badge-secondary"><%= dedication.count_not_assist %></span></td>
            <td><span class="badge badge-danger"><%= dedication.count_not_assist_without %></span></td>
            <td class="float-right">
              <%= link_to dedication_path(dedication), class: 'btn btn-outline-secondary btn-md', 
                title: 'Ver detalles', data: { toggle: 'tooltip', placement: 'top' } do %>
                <%= fa_icon "eye" %>
              <% end %>
              <%= link_to assign_dedication_dedication_path(dedication), class: 'btn btn-outline-success btn-md', 
                title: 'Asignar crÃ©dito', data: { toggle: 'tooltip', placement: 'top' } do %>
                <%= fa_icon "business-time" %>
              <% end %>
              <%= link_to edit_dedication_path(dedication), class: 'btn btn-outline-warning btn-md', 
                title: 'Editar', data: { toggle: 'tooltip', placement: 'top' } do %>
                <%= fa_icon "edit" %>
              <% end %>
              <%= link_to delete_dedication_path(dedication), remote: true,
                class: 'btn btn-outline-danger btn-md', title: 'Borrar', data: { toggle: 'tooltip', placement: 'top' } do %>
                <%= fa_icon "trash" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
