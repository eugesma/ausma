<div id="filterrific_results">
  <% if @meetings.present? %>
    <div class="card fixed-panel-list">
      <table class="table table-hover table-striped table-sm">
        <thead>
          <tr>
            <th><%= filterrific_sorting_link(@filterrific, :fecha) %></th>
            <th><%= filterrific_sorting_link(@filterrific, :nombre) %></th>
            <th>Docentes invitados</th>
            <th>Presentes</th>
            <th>Ausentes</th>
            <th>Ausentes s/a</th>
            <th></th>
          </tr>
        </thead>
        <tbody id="meetings">
          <%= render @meetings %>
        </tbody>
      </table>
    </div>
    <div id="page_links">
      <%= will_paginate @meetings, list_classes: %w(pagination justify-content-center), renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  <% else %>
    <%= render(
      partial: 'shared/not_found_filter',
      locals: { object_name: 'reuniones' }
    ) %>
  <% end %>
</div>